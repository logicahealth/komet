<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>sh.isaac</groupId>
        <artifactId>core</artifactId>
        <version>4.4</version>
    </parent>
    <groupId>sh.isaac.core</groupId>
    <artifactId>metadata</artifactId>
    <packaging>jar</packaging>
    <name>ISAAC core: Metadata</name>
    
    <description>
        A module that reads various metadata source files, and generates the ISAAC metadata for an instance in multiple formats - java, xml, etc
    </description>

    <dependencies>
        <dependency>
            <groupId>sh.isaac.core</groupId>
            <artifactId>metadata-source</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>sh.isaac.core</groupId>
                <artifactId>mojo</artifactId>
                <version>${project.version}</version>
                <dependencies>
                    <dependency>
                        <groupId>sh.isaac.core</groupId>
                        <artifactId>metadata-source</artifactId>
                        <version>${project.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>sh.isaac.provider</groupId>
                        <artifactId>identifier</artifactId>
                        <version>${project.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>sh.isaac.core</groupId>
                        <artifactId>model</artifactId>
                        <version>${project.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>sh.isaac.provider</groupId>
                        <artifactId>ibdf</artifactId>
                        <version>${project.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>sh.isaac.provider</groupId>
                        <artifactId>concept</artifactId>
                        <version>${project.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>sh.isaac.provider</groupId>
                        <artifactId>sememe</artifactId>
                        <version>${project.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>sh.isaac.provider</groupId>
                        <artifactId>path</artifactId>
                        <version>${project.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>sh.isaac.provider</groupId>
                        <artifactId>taxonomy</artifactId>
                        <version>${project.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>sh.isaac.provider</groupId>
                        <artifactId>commit</artifactId>
                        <version>${project.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>sh.isaac.provider</groupId>
                        <artifactId>stamp</artifactId>
                        <version>${project.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>sh.isaac.provider</groupId>
                        <artifactId>coordinate</artifactId>
                        <version>${project.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>sh.isaac.core</groupId>
                        <artifactId>log-config</artifactId>
                        <version>${project.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>sh.isaac.provider</groupId>
                        <artifactId>progress</artifactId>
                        <version>${project.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>sh.isaac.core</groupId>
                        <artifactId>mapping-constants</artifactId>
                        <version>${project.version}</version>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <id>export-metadata</id>
                        <phase>process-sources</phase> <!-- Run later than generate-sources, to not trigger a maven ugliness where this can get called twice. -->
                        <goals>
                            <goal>setup-isaac</goal>
                            <goal>export-taxonomy</goal>
                            <goal>shutdown-isaac</goal>
                        </goals>
                        <configuration>
                            <dbBuildMode>true</dbBuildMode>
                            <bootstrapMode>true</bootstrapMode>
                            <dataStoreLocation>${project.build.directory}/datastore</dataStoreLocation>
                            <bindingPackage>sh.isaac</bindingPackage>
                            <bindingClass>MetaData</bindingClass>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${project.build.directory}/src/generated</source>
                            </sources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>attach-artifacts</id>
                        <goals>
                            <goal>attach-artifact</goal>
                        </goals>
                        <configuration>
                            <artifacts>
                                <artifact>
                                    <type>ibdf.zip</type>
                                    <classifier>all</classifier>
                                    <file>${project.build.directory}/${project.build.finalName}-ibdf.zip</file>
                                </artifact>
                                <artifact>
                                    <type>json.zip</type>
                                    <classifier>all</classifier>
                                    <file>${project.build.directory}/${project.build.finalName}-json.zip</file>
                                </artifact>
                                <artifact>
                                    <type>xml.zip</type>
                                    <classifier>all</classifier>
                                    <file>${project.build.directory}/${project.build.finalName}-xml-all.zip</file>
                                </artifact>
                                <artifact>
                                    <type>yaml.zip</type>
                                    <file>${project.build.directory}/${project.build.finalName}-yaml.zip</file>
                                </artifact>
                            </artifacts>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-javadocs</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <descriptors>
                        <descriptor>src/main/assembly/ibdf.xml</descriptor>
                        <descriptor>src/main/assembly/json.xml</descriptor>
                        <descriptor>src/main/assembly/xml-all.xml</descriptor>
                        <descriptor>src/main/assembly/yaml.xml</descriptor>
                    </descriptors>
                    <!-- the default puts these in with the info in the classifier, but we want it as part of the type -->
                    <attach>false</attach>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
